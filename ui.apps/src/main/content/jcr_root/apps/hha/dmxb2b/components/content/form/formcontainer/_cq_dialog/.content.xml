<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Form Container"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
        margin="{Boolean}false">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <basic
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Layout design"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <type
                                        granite:class="cq-dialog-dropdown-showhide"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldLabel="Background Type"
                                        name="./type">
                                        <granite:data
                                            jcr:primaryType="nt:unstructured"
                                            cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"/>
                                        <items jcr:primaryType="nt:unstructured">
                                            <simple
                                                jcr:primaryType="nt:unstructured"
                                                text="Simple"
                                                value="simple"/>
                                            <image
                                                jcr:primaryType="nt:unstructured"
                                                text="Image"
                                                value="image"/>
                                        </items>
                                    </type>
                                    <backgroundcolor
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldDescription="Laout background color"
                                        fieldLabel="Layout Background Theme"
                                        name="./layoutbackgroundtheme">
                                        <items jcr:primaryType="nt:unstructured">
                                            <none
                                                jcr:primaryType="nt:unstructured"
                                                text="None"
                                                value=""/>
                                            <red
                                                jcr:primaryType="nt:unstructured"
                                                text="red"
                                                value="layoutbg-red"/>
                                            <blue
                                                jcr:primaryType="nt:unstructured"
                                                text="blue"
                                                value="layoutbg-blue"/>
                                            <green
                                                jcr:primaryType="nt:unstructured"
                                                text="green"
                                                value="layoutbg-green"/>
                                            <grey
                                                jcr:primaryType="nt:unstructured"
                                                text="grey"
                                                value="layoutbg-grey"/>
                                            <lightgrey
                                                jcr:primaryType="nt:unstructured"
                                                text="light-grey"
                                                value="layoutbg-lightgrey"/>
                                        </items>
                                    </backgroundcolor>
                                    <name
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="form name "
                                        fieldLabel="Name"
                                        name="./name"/>
                                    <file
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                        autoStart="{Boolean}false"
                                        class="cq-droptarget"
                                        fieldLabel="Image asset"
                                        fileNameParameter="./fileName"
                                        fileReferenceParameter="./fileReference"
                                        mimeTypes="[image,video]"
                                        multiple="{Boolean}false"
                                        name="./file"
                                        title="Upload Image Asset"
                                        uploadUrl="${suffix.path}"
                                        useHTML5="{Boolean}true"/>
                                    <formurl
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="url to post the form data"
                                        fieldLabel="Form Url"
                                        name="./actionUrl"/>
                                </items>
                            </column>
                        </items>
                    </basic>
                    <basic_x0020_2
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Layout Alignment"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <text-align
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldDescription="Container Text Alignment"
                                        fieldLabel="Container Text Alignment"
                                        name="./containertextalign">
                                        <items jcr:primaryType="nt:unstructured">
                                            <none
                                                jcr:primaryType="nt:unstructured"
                                                text="None"
                                                value=""/>
                                            <left
                                                jcr:primaryType="nt:unstructured"
                                                text="left align"
                                                value="container-text-left-align"/>
                                            <right
                                                jcr:primaryType="nt:unstructured"
                                                text="right align"
                                                value="container-text-right-align"/>
                                            <center
                                                jcr:primaryType="nt:unstructured"
                                                text="center align"
                                                value="container-text-center-align"/>
                                        </items>
                                    </text-align>
                                    <Desktop-top-bottom
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldDescription="Desktop Top and Bottom Padding"
                                        fieldLabel="Desktop Top and Bottom padding"
                                        name="./desktoptopbottom">
                                        <items jcr:primaryType="nt:unstructured">
                                            <none
                                                jcr:primaryType="nt:unstructured"
                                                text="None"
                                                value=""/>
                                            <ten
                                                jcr:primaryType="nt:unstructured"
                                                text="10px padding"
                                                value="ten-padding"/>
                                            <twenty
                                                jcr:primaryType="nt:unstructured"
                                                text="20px padding"
                                                value="twenty-padding"/>
                                            <thirty
                                                jcr:primaryType="nt:unstructured"
                                                text="30px padding"
                                                value="thirty-padding"/>
                                            <forty
                                                jcr:primaryType="nt:unstructured"
                                                text="40px padding"
                                                value="forty-padding"/>
                                            <fifty
                                                jcr:primaryType="nt:unstructured"
                                                text="50px padding"
                                                value="fifty-padding"/>
                                            <sixty
                                                jcr:primaryType="nt:unstructured"
                                                text="60px padding"
                                                value="sixty-padding"/>
                                            <eighty
                                                jcr:primaryType="nt:unstructured"
                                                text="80px padding"
                                                value="eighty-padding"/>
                                            <hundred
                                                jcr:primaryType="nt:unstructured"
                                                text="100px padding"
                                                value="hundred-padding"/>
                                        </items>
                                    </Desktop-top-bottom>
                                    <Desktop-left-right
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldDescription="Desktop Left and Right Padding"
                                        fieldLabel="Desktop Left and Right padding"
                                        name="./desktopleftright">
                                        <items jcr:primaryType="nt:unstructured">
                                            <none
                                                jcr:primaryType="nt:unstructured"
                                                text="None"
                                                value=""/>
                                            <ten
                                                jcr:primaryType="nt:unstructured"
                                                text="10px padding"
                                                value="horizontal-ten-padding"/>
                                            <twenty
                                                jcr:primaryType="nt:unstructured"
                                                text="20px padding"
                                                value="horizontal-twenty-padding"/>
                                            <thirty
                                                jcr:primaryType="nt:unstructured"
                                                text="30px padding"
                                                value="horizontal-thirty-padding"/>
                                            <forty
                                                jcr:primaryType="nt:unstructured"
                                                text="40px padding"
                                                value="horizontal-forty-padding"/>
                                            <fifty
                                                jcr:primaryType="nt:unstructured"
                                                text="50px padding"
                                                value="horizontal-fifty-padding"/>
                                            <sixty
                                                jcr:primaryType="nt:unstructured"
                                                text="60px padding"
                                                value="horizontal-sixty-padding"/>
                                        </items>
                                    </Desktop-left-right>
                                    <tablet-top-bottom
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldDescription="Tablet Top and Bottom Padding"
                                        fieldLabel="Tablet Top and Bottom padding"
                                        name="./tablettopbottom">
                                        <items jcr:primaryType="nt:unstructured">
                                            <none
                                                jcr:primaryType="nt:unstructured"
                                                text="None"
                                                value=""/>
                                            <ten
                                                jcr:primaryType="nt:unstructured"
                                                text="10px padding"
                                                value="tab-ten-padding"/>
                                            <twenty
                                                jcr:primaryType="nt:unstructured"
                                                text="20px padding"
                                                value="tab-twenty-padding"/>
                                            <thirty
                                                jcr:primaryType="nt:unstructured"
                                                text="30px padding"
                                                value="tab-thirty-padding"/>
                                            <forty
                                                jcr:primaryType="nt:unstructured"
                                                text="40px padding"
                                                value="tab-forty-padding"/>
                                            <fifty
                                                jcr:primaryType="nt:unstructured"
                                                text="50px padding"
                                                value="tab-fifty-padding"/>
                                            <sixty
                                                jcr:primaryType="nt:unstructured"
                                                text="60px padding"
                                                value="tab-sixty-padding"/>
                                        </items>
                                    </tablet-top-bottom>
                                    <tablet-left-right
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldDescription="Tablet Left and Right Padding"
                                        fieldLabel="Tablet Left and Right padding"
                                        name="./tabletleftright">
                                        <items jcr:primaryType="nt:unstructured">
                                            <none
                                                jcr:primaryType="nt:unstructured"
                                                text="None"
                                                value=""/>
                                            <ten
                                                jcr:primaryType="nt:unstructured"
                                                text="10px padding"
                                                value="tabhorz-ten-padding"/>
                                            <twenty
                                                jcr:primaryType="nt:unstructured"
                                                text="20px padding"
                                                value="tabhorz-twenty-padding"/>
                                            <thirty
                                                jcr:primaryType="nt:unstructured"
                                                text="30px padding"
                                                value="tabhorz-thirty-padding"/>
                                            <forty
                                                jcr:primaryType="nt:unstructured"
                                                text="40px padding"
                                                value="tabhorz-forty-padding"/>
                                        </items>
                                    </tablet-left-right>
                                    <Mobile-top-bottom
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldDescription="Mobile Top and Bottom Padding"
                                        fieldLabel="Mobile Top and Bottom padding"
                                        name="./mobiletopbottom">
                                        <items jcr:primaryType="nt:unstructured">
                                            <none
                                                jcr:primaryType="nt:unstructured"
                                                text="None"
                                                value=""/>
                                            <ten
                                                jcr:primaryType="nt:unstructured"
                                                text="10px padding"
                                                value="mob-ten-padding"/>
                                            <twenty
                                                jcr:primaryType="nt:unstructured"
                                                text="20px padding"
                                                value="mob-twenty-padding"/>
                                            <thirty
                                                jcr:primaryType="nt:unstructured"
                                                text="30px padding"
                                                value="mob-thirty-padding"/>
                                            <forty
                                                jcr:primaryType="nt:unstructured"
                                                text="40px padding"
                                                value="mob-forty-padding"/>
                                            <fifty
                                                jcr:primaryType="nt:unstructured"
                                                text="50px padding"
                                                value="mob-fifty-padding"/>
                                        </items>
                                    </Mobile-top-bottom>
                                    <Mobile-left-right
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        fieldDescription="Mobile Left and Right Padding"
                                        fieldLabel="Mobile Left and Right padding"
                                        name="./mobileleftright">
                                        <items jcr:primaryType="nt:unstructured">
                                            <none
                                                jcr:primaryType="nt:unstructured"
                                                text="None"
                                                value=""/>
                                            <ten
                                                jcr:primaryType="nt:unstructured"
                                                text="10px padding"
                                                value="mobhorz-ten-padding"/>
                                            <twenty
                                                jcr:primaryType="nt:unstructured"
                                                text="20px padding"
                                                value="mobhorz-twenty-padding"/>
                                            <thirty
                                                jcr:primaryType="nt:unstructured"
                                                text="30px padding"
                                                value="mobhorz-thirty-padding"/>
                                            <forty
                                                jcr:primaryType="nt:unstructured"
                                                text="40px padding"
                                                value="mobhorz-forty-padding"/>
                                            <fifty
                                                jcr:primaryType="nt:unstructured"
                                                text="50px padding"
                                                value="mobhorz-fifty-padding"/>
                                        </items>
                                    </Mobile-left-right>
                                </items>
                            </column>
                        </items>
                    </basic_x0020_2>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
