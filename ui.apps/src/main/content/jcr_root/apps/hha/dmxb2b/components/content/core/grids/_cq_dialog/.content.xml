<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Grid Selection"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/form"/>
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/tabs"
                    type="nav"/>
                <items jcr:primaryType="nt:unstructured">
                    <grid-layout
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Grid Layout"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <grid
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                        fieldLabel="Grid"
                                        name="./coltype">
                                        <items jcr:primaryType="nt:unstructured">
                                            <col-12
                                                jcr:primaryType="nt:unstructured"
                                                text="Single Column (100%)"
                                                value="single"/>
                                            <col-9-3
                                                jcr:primaryType="nt:unstructured"
                                                text="2 Columns (75%, 25%)"
                                                value="9-3-col"/>
                                            <col-8-4
                                                jcr:primaryType="nt:unstructured"
                                                text="2 Columns (66.5%, 33.5%)"
                                                value="8-4-col"/>
                                            <col-6-6
                                                jcr:primaryType="nt:unstructured"
                                                text="2 Columns (50%, 50%)"
                                                value="6-6-col"/>
                                            <col-4-8
                                                jcr:primaryType="nt:unstructured"
                                                text="2 Columns (33.5%, 66.5%)"
                                                value="4-8-col"/>
                                            <col-3-9
                                                jcr:primaryType="nt:unstructured"
                                                text="2 Columns (25%, 75%)"
                                                value="3-9-col"/>
                                            <col-4-4-4
                                                jcr:primaryType="nt:unstructured"
                                                text="3 Columns (33.33%, 33.33%, 33.33%)"
                                                value="4-4-4-col"/>
                                            <col-6-3-3
                                                jcr:primaryType="nt:unstructured"
                                                text="3 Columns (50%, 25%, 25%)"
                                                value="6-3-3-col"/>
                                            <col-3-6-3
                                                jcr:primaryType="nt:unstructured"
                                                text="3 Columns (25%, 50%, 25%)"
                                                value="3-6-3-col"/>
                                            <col-3-3-6
                                                jcr:primaryType="nt:unstructured"
                                                text="3 Columns (25%, 25%, 50%)"
                                                value="3-3-6-col"/>
                                            <col-3-3-3-3
                                                jcr:primaryType="nt:unstructured"
                                                text="4 Columns (25%, 25%, 25%, 25%)"
                                                value="3-3-3-3-col"/>
                                            <col-2-2-2-2-2-2
                                                jcr:primaryType="nt:unstructured"
                                                text="6 Columns (16.66%, 16.66%, 16.66%, 16.66%, 16.66%, 16.66%)"
                                                value="2-2-2-2-2-2-col"/>
                                            <_x0032_col
                                                jcr:primaryType="nt:unstructured"
                                                text="2 Colulmns"
                                                value="2col"/>
                                            <_x0033_col
                                                jcr:primaryType="nt:unstructured"
                                                text="3 Columns"
                                                value="3col"/>
                                        </items>
                                    </grid>
                                    <options
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                        fieldDescription="Select the type of column control to generate. Note: The content of any column(s) can NOT be transferred to another column(s) via this dialog box. "
                                        fieldLabel="Column Layout Options">
                                        <items jcr:primaryType="nt:unstructured"/>
                                    </options>
                                </items>
                            </columns>
                        </items>
                    </grid-layout>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
